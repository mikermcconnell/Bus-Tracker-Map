# Bus Tracking Monitor â€” Environment Variables
# Copy to ../.env and fill in your values

# GTFS feeds (Barrie Transit)
GTFS_STATIC_URL=https://www.myridebarrie.ca/gtfs/google_transit.zip
GTFS_RT_VEHICLES_URL=https://www.myridebarrie.ca/gtfs/GTFS_VehiclePositions.pb

# Gmail SMTP (use an App Password, not your regular password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-gmail@gmail.com
SMTP_PASS=your-app-password
# Optional: force IPv4 for SMTP sockets (helpful in some cloud runtimes)
# SMTP_FORCE_IPV4=true

# Alert recipient
ALERT_RECIPIENT=your-email@barrie.ca

# Optional HTTPS mail provider (recommended for cloud cron jobs)
# If set, monitor will send mail through Resend API instead of SMTP.
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxx
# RESEND_FROM_EMAIL=Barrie Transit Monitor <onboarding@resend.dev>

# Optional tuning
# SILENCE_THRESHOLD_MIN=5
# ALERT_AFTER_MIN=20
# GTFS_CACHE_MAX_AGE_HOURS=24
# LAYOVER_GRACE_MIN=10
# MONITOR_TIMEZONE=America/Toronto
# WATCHDOG_MAX_AGE_MIN=30
# TEST_ALERT_EVERY_RUN=true
# TEST_ALERT_RECIPIENT=your-own-email@example.com
