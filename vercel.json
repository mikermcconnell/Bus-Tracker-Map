{
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/dist",
  "framework": null,
  "functions": {
    "api/index.js": {
      "includeFiles": "cache/**"
    }
  },
  "headers": [
    {
      "source": "/styles.css",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=0, must-revalidate" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" }
  ],
  "env": {
    "GTFS_RT_VEHICLES_URL": "https://www.myridebarrie.ca/gtfs/GTFS_VehiclePositions.pb",
    "POLL_MS": "10000"
  },
  "build": {
    "env": {
      "GTFS_STATIC_URL": "https://www.myridebarrie.ca/gtfs/google_transit.zip"
    }
  }
}
